    {
      "name": "API Ninjas - Air Quality by City",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Api-Key",
            "value": "",
            "description": "Optional API key (leave empty for limited free use)"
          }
        ],
        "url": {
          "raw": "https://api.api-ninjas.com/v1/airquality?city=New York",
          "protocol": "https",
          "host": [
            "api",
            "api-ninjas",
            "com"
          ],
          "path": [
            "v1",
            "airquality"
          ],
          "query": [
            {
              "key": "city",
              "value": "New York",
              "description": "City name (e.g., New York, Los Angeles, Delhi, London)"
            }
          ]
        },
        "description": "Fetches live AQI data for any city. Supports city names directly. Works for cities across different states and countries. Returns overall_aqi, PM2.5, PM10, CO, NO₂, O₃, SO₂. No API key required for limited use."
      }
    },
